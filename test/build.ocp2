OCaml.library(
  "test-lib",
  ocaml + {
    files = [
      "test.ml"
    ];
    requires = [
      "ocplib-utils-js"
    ];
  });

OCaml.program(
  "main",
  ocaml + {
    requires = [
      "test-lib"
    ];
    files = [
      "main.ml"
    ];
    build_rules = [
      "%{main_FULL_DST_DIR}%/main.byte.js", {
        build_target = true;
        sources = "%{main_FULL_DST_DIR}%/main.byte.exe";
        commands = [
          OCaml.system([
            "js_of_ocaml";
            "%{main_FULL_DST_DIR}%/main.byte.exe";
          ])
        ]
      }
    ]
  });